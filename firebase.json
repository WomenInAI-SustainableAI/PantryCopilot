{
  "hosting": {
    "public": "frontend/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "predeploy": [
      "npm --prefix frontend install",
      "npm --prefix frontend run build"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "run": {
          "serviceId": "pc-backend",
          "region": "us-central1"
        }
      }
    ]
  }
}
